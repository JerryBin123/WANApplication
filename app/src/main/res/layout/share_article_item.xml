<?xml version="1.0" encoding="utf-8"?>
<com.example.wanapplication.widget.NestedSwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:id="@+id/share_article_sl"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:drag_edge="right"
    app:show_mode="lay_down">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/mine_background_blue"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/white"
            android:text="删除" />

    </LinearLayout>
    <include layout="@layout/home_item"/>
</com.example.wanapplication.widget.NestedSwipeLayout >