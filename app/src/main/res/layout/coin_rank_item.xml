<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ProgressBar
        android:id="@+id/coin_rank_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.1"
        android:indeterminate="false"
        android:max="1000"
        android:progress="520"
        android:progressDrawable="@drawable/coin_rank_progress_bar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <FrameLayout
            android:id="@+id/fl_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/coin_count_iv"
                android:layout_width="24dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:paddingTop="4dp"
                android:scaleType="fitCenter"/>

            <TextView
                android:id="@+id/coin_rank_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:textSize="13sp"
                android:text="2"/>

        </FrameLayout>

        <TextView
            android:id="@+id/coin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/fl_index"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:textSize="15sp"
            android:text="liusadsaf" />

        <TextView
            android:id="@+id/coin_rank_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:textSize="15sp"
            tools:text="520" />

    </RelativeLayout>

</FrameLayout>